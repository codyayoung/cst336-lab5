<% include partials/header.ejs %>

<form action="/search">
    <input id="keyword" type="text" value="<%=keyword%>" placeholder="Enter a keyword" name="keyword"/> <br><br>
    <button>
        Search
    </button>
    <a href="/displayKeywords">Favorites</a>
</form>

<% imageURLs.forEach(function(imageURL, i){ %>

    <%- (i%3==0)?'<br>':'' %>
    <img src='<%=imageURL%>' width='200' height='200'>
    <img class='favoriteIcon' src='img/favorite.png' width='20'>
    
<% }) %>

